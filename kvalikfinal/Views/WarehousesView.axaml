<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="kvalikfinal.Views.WarehousesView"
             Background="#F5F6F8"
             FontFamily="Roboto"
             Foreground="#1F1F1F">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20" Spacing="10">
            <TextBlock Text="Warehouses Management" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Add Warehouse" FontSize="14" Background="#2F80ED" Foreground="#FFFFFF" Click="AddWarehouseButton_Click"/>
            <Button Content="Add Storage Zone" FontSize="14" Background="#2F80ED" Foreground="#FFFFFF" Click="AddZoneButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15" Spacing="10">
            <TextBox x:Name="SearchTextBox" FontSize="14" Watermark="Search warehouses..." Width="300" TextChanged="SearchTextBox_TextChanged"/>
            <Button Content="Reset Filters" FontSize="14" Background="#2F80ED" Foreground="#FFFFFF" Click="ResetFiltersButton_Click"/>
        </StackPanel>

        <Grid Grid.Row="2" ColumnDefinitions="*,*">
            <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="0,0,10,0">
                <ScrollViewer>
                    <DataGrid x:Name="WarehousesGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              FontSize="14"
                              SelectionChanged="WarehousesGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding WarehouseId}" Width="50"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="200"/>
                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <Button Content="Edit" FontSize="14" Click="EditWarehouseButton_Click" Tag="{Binding}"/>
                                            <Button Content="Delete" FontSize="14" Click="DeleteWarehouseButton_Click" Tag="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Border>

            <Border Grid.Column="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="10,0,0,0">
                <ScrollViewer>
                    <DataGrid x:Name="ZonesGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              FontSize="14">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ZoneId}" Width="50"/>
                            <DataGridTextColumn Header="Code" Binding="{Binding ZoneCode}" Width="150"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <Button Content="Edit" FontSize="14" Click="EditZoneButton_Click" Tag="{Binding}"/>
                                            <Button Content="Delete" FontSize="14" Click="DeleteZoneButton_Click" Tag="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
