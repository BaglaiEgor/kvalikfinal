<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="kvalikfinal.Views.SupplierEditDialog"
        Width="400" Height="400"
        Title="Edit Supplier"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6F8"
        FontFamily="Roboto"
        Foreground="#1F1F1F">

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Edit Supplier" FontSize="20" FontWeight="Bold"/>

        <TextBlock Text="Name *" FontSize="14"/>
        <TextBox x:Name="NameTextBox" FontSize="14"/>

        <TextBlock Text="Phone" FontSize="14"/>
        <TextBox x:Name="PhoneTextBox" FontSize="14"/>

        <TextBlock Text="Contact Person" FontSize="14"/>
        <TextBox x:Name="ContactPersonTextBox" FontSize="14"/>

        <TextBlock Text="Email" FontSize="14"/>
        <TextBox x:Name="EmailTextBox" FontSize="14"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
            <Button Content="Save" FontSize="14" Background="#2F80ED" Foreground="#FFFFFF" Click="SaveButton_Click"/>
            <Button Content="Cancel" FontSize="14" Background="#2F80ED" Foreground="#FFFFFF" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
