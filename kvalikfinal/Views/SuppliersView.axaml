<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="kvalikfinal.Views.SuppliersView"
             Background="#F5F6F8"
             FontFamily="Roboto"
             Foreground="#1F1F1F">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Suppliers Management"
                       FontSize="20"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
            <Button Content="Add Supplier"
                    Margin="20,0,0,0"
                    Background="#2F80ED"
                    Foreground="#FFFFFF"
                    FontSize="14"
                    Click="AddSupplierButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15" Spacing="10">
            <TextBox x:Name="SearchTextBox"
                     Watermark="Search suppliers..."
                     Width="300"
                     FontSize="14"
                     TextChanged="SearchTextBox_TextChanged"/>
            <Button Content="Reset Filters"
                    FontSize="14"
                    Background="#2F80ED"
                    Foreground="#FFFFFF"
                    Click="ResetFiltersButton_Click"/>
        </StackPanel>

        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DataGrid x:Name="SuppliersGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          FontSize="14">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                        <DataGridTextColumn Header="Contact Person" Binding="{Binding ContactPerson}" Width="150"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="180"/>
                        <DataGridTemplateColumn Header="Actions" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <Button Content="Edit"
                                                FontSize="14"
                                                Background="#2F80ED"
                                                Foreground="#FFFFFF"
                                                Tag="{Binding}"
                                                Click="EditSupplierButton_Click"/>
                                        <Button Content="Delete"
                                                FontSize="14"
                                                Background="#2F80ED"
                                                Foreground="#FFFFFF"
                                                Tag="{Binding}"
                                                Click="DeleteSupplierButton_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
